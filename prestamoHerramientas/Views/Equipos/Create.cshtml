@model prestamoHerramientas.Models.Equipo

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center><h1>Nuevo Equipo</h1></center>
<hr />
<br />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col ">
        <label>Nombre del Equipo</label>
        <input asp-for="NombreEquipo" class="form-control" />
        <span asp-validation-for="NombreEquipo" class="text-danger"></span>
    </div>
    <div class="col">
        <label>Marca</label>
            <select asp-for="IdMarca" class="form-control dropdown dropdown-toggle" data-toggle="dropdown"  asp-items="ViewBag.IdMarca"></select>
    </div>
    </div>
    <br />
    <div class="row">
        <div class="col ">
        <label>Numero de Serie</label>
        <input asp-for="NumeroSerie" class="form-control" />
        <span asp-validation-for="NumeroSerie" class="text-danger"></span>
    </div>
    <div class="col">
        <label class="control-label">Descripción</label>
        <input asp-for="Descripcion" class="form-control" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    </div>
    <br />

    <div class="row">
    <div class="col-sm-1">
        <input type="submit" value="Crear" class="btn btn-sm btn-primary" />
    </div>
        <div class="col-sm-1">
            <a asp-action="Index" class="btn btn-sm btn-secondary">Regresar</a>
        </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
