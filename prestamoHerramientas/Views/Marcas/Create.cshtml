@model prestamoHerramientas.Models.Marca

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center><h1>Nueva Marca</h1> </center>
<hr />
<br />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col ">
            <label>Marca</label>
            <input asp-for="NombreMarca" placeholder="Marca" class="form-control" />
            <span asp-validation-for="NombreMarca" class="text-danger"></span>
        </div>
        <div class="col">
            <label>Descripción</label>
            <input asp-for="Descripcion" placeholder="Descripción" class="form-control" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col">
            <label>Lista de Tipo de Herramientas</label>
            <select asp-for="IdTipoHerramienta" class="form-control dropdown dropdown-toggle" data-toggle="dropdown"  asp-items="ViewBag.IdTipoHerramienta"></select>
        </div>
        <div class="col">
            <label>Exactitud</label>
            <input asp-for="Exactitud" placeholder="Exactitud" class="form-control" />
            <span asp-validation-for="Exactitud" class="text-danger"></span>
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-sm-1">
            <input type="submit" value="Crear" class="btn btn-sm btn-success" />
        </div>
        <div class="col-sm-1">
            <a asp-action="Index" class="btn btn-sm btn-secondary">Regresar</a>
        </div>
    </div>
</form>
<br />


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
