@model prestamoHerramientas.Models.Marca

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar Marca</h1>

<h3>¿Seguro desea Eliminar este Registro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Marca
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreMarca)
        </dd>
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            Exactitud
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Exactitud)
        </dd>
        <dt class = "col-sm-2">
            Tipo de Herramienta
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdTipoHerramientaNavigation.TipoHerramienta1)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdMarca" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
    </form>
</div>
