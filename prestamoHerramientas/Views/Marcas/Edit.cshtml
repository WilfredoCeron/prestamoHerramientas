@model prestamoHerramientas.Models.Marca

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar Marca</h1>

<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdMarca" />
    <div class="row">
        <div class="col ">
            <label>Marca</label>
            <input asp-for="NombreMarca" class="form-control" />
            <span asp-validation-for="NombreMarca" class="text-danger"></span>
        </div>
        <div class="col">
            <label>Descripción</label>
            <input asp-for="Descripcion" class="form-control" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col">
            <label>Tipo de Herramienta</label>
            <select asp-for="IdTipoHerramienta" class="form-control" asp-items="ViewBag.IdTipoHerramienta"></select>
            <span asp-validation-for="IdTipoHerramienta" class="text-danger"></span>
        </div>
        <div class="col">
            <label>Exactitud</label>
            <input asp-for="Exactitud" class="form-control" />
            <span asp-validation-for="Exactitud" class="text-danger"></span>
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-sm-1">
            <input type="submit" value="Guardar" class="btn btn-sm btn-success" />
        </div>
        <div class="col-sm-1">
            <a asp-action="Index" class="btn btn-sm btn-secondary">Regresar</a>
        </div>
    </div>
</form>
<br />


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
