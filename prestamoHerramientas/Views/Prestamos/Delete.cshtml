@model prestamoHerramientas.Models.Prestamo

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar Prestamo</h1>

<h3>¿Seguro desea Eliminar este Registro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Prestado A:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PreatadoA)
        </dd>
        <dt class = "col-sm-2">
            Fecha de prestamo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaIncio)
        </dd>
        <dt class = "col-sm-2">
            fecha de devolución)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaFin)
        </dd>
        <dt class = "col-sm-2">
            Estado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
        <dt class = "col-sm-2">
            Marca
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdMarcaNavigation.NombreMarca)
        </dd>
        <dt class = "col-sm-2">
            Modelo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdModeloNavigation.Serie)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPrestamo" />
        <input type="submit" value="Eliminar" class="btn btn-sm btn-danger" /> |
        <a asp-action="Index" class="btn btn-sm btn-secondary">Regresar</a>
    </form>
</div>
